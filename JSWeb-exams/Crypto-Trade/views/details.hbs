<main>
  <section id='details-info'>
    <h1>Details</h1>
    <div class='coin-image'>
      <img src={{coin.imageUrl}} />
    </div>

    <div class='coin-info'>
      <div class='coin-text'>
        <h1 id='name'>{{coin.name}}</h1>
        <h3 id='payment'>Payment method: {{coin.paymentMethod}}</h3>
        <p id='price'><span>Price: ${{coin.price}}</span></p>
        <p id='description'>
          {{coin.description}}
        </p>
      </div>
      <div class='product-btn'>
        {{#if username}}
          <!--Only for registered user and author of the publication -->
          {{#if coin.isOwner}}
            <div class='author'>
              <a href='#' class='btn-edit'>Edit</a>
              <a href='#' class='btn-delete'>Delete</a>
            </div>
          {{else}}
            <!-- Logged in user who has not yet buy thi s crypto-->
            <a href='#' class='btn-buy'>Buy</a>
          {{/if}}

          <!-- Logged in user who has already buy this crypto-->
          <p class='buy-message'>You already bought these crypto coins.</p>
        {{/if}}
      </div>
    </div>
  </section>
</main>