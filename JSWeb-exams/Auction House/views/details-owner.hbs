<main>
  {{#with item}}
    <section id='catalog-section'>

      <h1 class='item'>
        {{title}}
        <div class='f-right'>
          <a class='action pad-small f-left' href='/auctions/edit/{{_id}}'>Edit</a>
          <a class='action pad-small f-left' href='#'>Delete</a>
        </div>
      </h1>
      <div class='item padded'>

        <div class='layout right large'>

          <div class='col'>
            <img src='{{imageUrl}}' class='img-large' />
          </div>

          <div class='content pad-med'>

            <p>In category: <strong>{{category}}</strong></p>
            <p>{{description}}</p>

            <div class='align-center'>
              <div>
                Current price: $<strong>{{price}}</strong>
              </div>

              <div>
                <!-- If there is a bidder -->
                {{#if hasBidders}}
                Bid by
                <strong>{{currentBidder}}</strong>
                <!-- If there are no bids -->
                {{else}}
                No bids
                {{/if}}
              </div>
            </div>

          </div>
        </div>

        <footer>Listed by {{owner.email}}</footer>
      </div>

    </section>
  {{/with}}
</main>