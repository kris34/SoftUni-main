<section id='viewhotelDetails'>
  <h2>Details</h2>
  <div class='hotel-ticket'>
    <div class='hotel-left'>
      <img src='{{hotel.imageUrl}}' alt='image' />
    </div>
    <div class='hotel-right'>
      <div>
        <h3>{{hotel.name}}</h3>
      </div>
      <div>
        {{hotel.city}}
      </div>
      <p><span>Free rooms: {{hotel.freeRooms}}</span> </p>
      {{#unless hotel.isOwner}}
        {{#if hotel.isBooked}}
          <p><span class='green'>You already have booked a room</span> </p>
        {{else}}
          <a href='/site/{{hotel._id}}/book' class='book'>Book</a>
        {{/if}}
      {{/unless}}

      {{#if hotel.isOwner}}
        <a href='/site/{{hotel._id}}/edit' class='edit'>Edit</a>
        <a href='' class='remove'>Delete</a>
      {{/if}}
    </div>

  </div>
</section>