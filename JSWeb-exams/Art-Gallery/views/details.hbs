<main>

  <section id='details-page'>
    <h1>Details</h1>
    <article class='details-card'>
      <article class='details-card-text'>
        <h2>
          Title:<br />
          {{painting.title}}
        </h2>
        <h3>Author: {{painting.author.username}}</h3>
        <h3>Painting technique: {{painting.technique}}</h3>
        <h3>Certificate of authenticity: {{painting.certificate}}</h3>

        <!-- If there is no registered user, do not display buttons-->
        {{#if username}}
          <div class='buttons'>
            <!-- Only for registered user and author of the publication -->
            <a href='#' class='btn-edit'>Edit</a>
            <a href='#' class='btn-delete'>Delete</a>
            <!-- logged in user who has not yet shared the publication-->
            <a href='#' class='btn-share'>Share publication</a>
            <!-- logged in user who has already shared the publication-->
            <p class='shared-pub'>You already shared this publication</p>

          </div>
        {{/if}}
      </article>

      <article class='details-card-image'>
        <img src='{{painting.imageUrl}}' alt='art-image2' />
      </article>
    </article>
  </section>
</main>