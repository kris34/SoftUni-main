<main>

  <section id='home-page'>
    <article class='home-page-content'>
      <h1>Find The Job That Fits Your Life</h1>
      <p>On this site, you can find hundreds of job offers, do not hesitate, and
        apply now.</p>
      <a href='#' class='view-all-ads'>View all ads</a>
    </article>
    <article class='home-page-image'>

      <img src='/static/img/man.png' alt='man' />
    </article>
  </section>

  <section class='intro'>
    <article class='intro-left-side'>
      <article class='intro-left-side-image'>
        <img src='/static/img/people-group.png' alt='people' />
      </article>
      <article class='intro-left-side-text'>
        <h1>You're Looking for Trending Jobs!</h1>
        <h2>See the first three ads you applied for.</h2>
      </article>
    </article>

    <article class='intro-symbol'>
      <img src='/static/img/strip-square.png' alt='strip-square' />
    </article>


      <article class='intro-right-side'>
        <!--If there are job ads in the database, show them (max 3)-->
        {{#if ads}}
          {{#each ads}}
            <article class='intro-right-side-content'>
              <img src='/static/img/technology.png' alt='technology' />
              <h5>
                <!--Put the value of the headline below-->
                {{headline}}
                <!--Put the value of the total number of candidates below-->
                <span>Candidates: {{count}}</span>
              </h5>
            </article>
          {{/each}}
        {{else}}
          <!--If not show:-->
          <p class='no-ads-created'>No ads created!</p>
        {{/if}}
      </article>

  </section>
</main>