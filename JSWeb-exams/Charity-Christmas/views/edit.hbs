<section id='editPage'>
  <form id='editForm' action='/site/{{toy._id}}/edit' method='post'>
    <label for='title'>Title:</label>
    <input
      type='text'
      id='title'
      name='title'
      placeholder='Title...'
      value='{{toy.title}}'
    />
    <label for='charity'>For Charity:</label>
    <input
      type='text'
      id='charity'
      name='charity'
      placeholder='For Charity...'
      value='{{toy.charity}}'
    />
    <label for='price'>Price:</label>
    <input
      type='number'
      id='price'
      name='price'
      placeholder='Price...'
      value='{{toy.price}}'
    />
    <label for='description'>Description:</label>
    <input
      type='text'
      id='description'
      name='description'
      placeholder='Description...'
      value='{{toy.description}}'
    />
    <label for='category'>Category:</label>
    <input
      type='text'
      id='category'
      name='category'
      placeholder='Category...'
      value='{{toy.category}}'
    />
    <input type='submit' class='edit' value='Edit Toy Offer' />
  </form>
</section>